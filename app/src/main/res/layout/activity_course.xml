<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_title"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_back_collect"
            android:padding="20dp"
            android:src="@drawable/back_left"
            android:layout_width="50dp"
            android:layout_height="60dp" />
        <TextView
            android:text="课程详情"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textColor="@color/darkblack"
            />
    </LinearLayout>
    <RadioGroup
        android:visibility="visible"
        android:orientation="horizontal"
        android:layout_below="@id/ll_title"
        android:id="@+id/radioGroup_order"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RadioButton
            android:id="@+id/rb_allOrder_order"
            android:background="@drawable/select_btn_login"
            android:gravity="center"
            android:text="课程详情"
            android:layout_width="0dp"
            android:checked="true"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            />
        <RadioButton
            android:id="@+id/rb_pingJia_order"
            android:background="@drawable/select_btn_login"
            android:gravity="center"
            android:text="网友评价"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            />

    </RadioGroup>
    <android.support.v4.view.ViewPager
        android:visibility="visible"
        android:id="@+id/viewpager_order"
        android:layout_below="@+id/radioGroup_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>






</RelativeLayout>
